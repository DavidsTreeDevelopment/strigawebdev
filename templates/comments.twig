<div class="container" id="toDoListModule">
    <div id="wrap">
        <div id="main">
            <div class="row">
            <div class="col-md-5">
                <h3 class="heading">Comments and Responses</h3>
            </div>
            <div class="col-md-7">
                <div id="upper_blank"></div>
            </div>
            </div>
        </div>
    <div id='form'>
        <div class="row">
            <div class="col-md-12">
            
                    <p><!-- This is the ADD ITEM part of the program-->
                        <div id="comment-name" class="form-row">
                        <input type = "text" placeholder = "Name (required)" name = "dname"  id = "name" >
                        </div>
                        <div id="comment-email" class="form-row">
                            <input type = "text" placeholder = "Mail (will not be published) (required)" name = "demail"  id = "email">
                        </div>
                        <div id="comment-message" class="form-row">
                            <textarea name = "comment" placeholder = "Message" id = "comment" ></textarea>
                        </div>
                        <!--Submit Comment Button-->
                        <button id="commentSubmit">Submit Comment</button>
                    </p>

                    <h3>Todo ~ <span id="todoHTML"></span></h3><!--This is the part where the added/unticked todo items go -->
                    <div id="second">
                        <div class="row">
                            <div class="col-md-2">
                                <h3 class="second_heading"><b>Leave a Reply</b></h3>
                            </div>
                            <div class="col-md-10">
                                <div class="blank"></div>
                            </div>
                        </div>
                    </div>
                    <div id="middle">
                            <ul id="incomplete-tasks">
                            </ul>
                            <a href="#">
                                <input type = "text" value = "reply" name = "dreply" id = "inner_reply">
                            </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


